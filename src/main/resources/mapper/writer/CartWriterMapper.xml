<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kyobobook.application.adapter.out.persistence.cart.CartWriterMapper">
	
	<!--
        설명     : 장바구니 체크박스 업데이트
        작성일자  : 2021. 11. 11.
        작성자   : seohee.ko@kyobobook.com
    -->
	<update id="updateCartCheck" parameterType="java.lang.String">
     UPDATE /* CartWriterMapper.updateCartStus */
            DEV.TM_SPBK
        SET CHEK_YS = DECODE(CHEK_YS,'Y','N','N','Y')
      WHERE UNFY_CMDT_ID = #{unfyCmdtId}
    </update>

    <!--
        설명     : 장바구니 상품삭제(상태변경)
        작성일자  : 2021. 11. 11.
        작성자   : seohee.ko@kyobobook.com
    -->
    
    
    <delete id="deleteCartCheck" parameterType="hashmap">
     DELETE /* CartWriterMapper.deleteCartCheck */ 
       FROM DEV.TM_SPBK 
      WHERE UNFY_CMDT_ID IN 
      <foreach collection="checkArr" item="check" open="(" close=")" separator=",">
            #{check}
      </foreach>
    </delete>
</mapper>

